<h1>Restaurants!</h1>
<%= link_to "Make a new restaurant!", new_restaurant_path %>
<% @restaurants.each do |restaurant| %>
  <div class="restaurant">
    <p>Name: <%= link_to "#{restaurant.name}", restaurant_path(restaurant.id) %></p>
    <p>About: <%= restaurant.description %></p>
    <p>Capacity: <%= restaurant.capacity %></p>
  </div>
<% end %>
