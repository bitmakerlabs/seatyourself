<% if @user.errors.any? %>
    <ul>
      <%= @users.errors.full_messages.each do |m| %>
        <li><%= m %><li>
      <% end %>
    </ul>
<% end %>

<h1>Sign Up</h1>
<p>This View is in this location: app/views/users/new.html.erb</p>

<%= form_for @user do |f| %>

  <div class+'field'>
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>

  <div class+'field'>
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <div class+'field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation%>
  </div>

  <%= f.submit 'Sign Up' %>

<% end %>
