<% if restaurant.errors.any? %>
  <ul>
  <% restaurant.errors.full_messages.each do |msg| %>
    <span class="error">*<%= msg %></span>
  <% end %>
  </ul>
<% end %>

<%=form_for restaurant do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :capacity %><br>
    <%= f.text_field :capacity %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :neighbourhood %><br>
    <%= f.text_field :neighbourhood %>
  </p>
  <p>
    <%= f.label :price_range %><br>
    <%= f.text_field :price_range %>
  </p>

  <p>
    <%= f.label :main_picture %><br>
    <%= f.file_field :main_picture %>
  </p>
  <p>
    <%= f.label :uploads %><br>
    <%= f.file_field :uploads, multiple: true %>
  </p>

  <p>
     <%= f.submit "Save" %>
   </p>
 <% end %>
