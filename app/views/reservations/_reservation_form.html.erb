<%= form_for ([@user, @restaurant, @reservation]) do |f| %>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div><br />

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div><br />

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
