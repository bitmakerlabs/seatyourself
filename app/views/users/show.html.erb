
<h1>Your Reservations</h1>
<% if @resos.length > 0 %>
  <% @resos.each do |reso| %>
    <h3>Name: <%= reso.restaurant.name %></h3>
    <p>Date: <%= reso.date %></p>
    <p>Time: <%= reso.time %></p>
    <p>Party-size: <%= reso.partysize %></p>
  <% end %>
<% else %>
  <h3>No Reservations Made</h3>
<% end %>

<% if @user.owner %>
  <h1>Your Restaurant's Reservations</h1>
    <% @user_restaurants.each do |restaurant| %>
      <h2><%= restaurant.name %></h2>
    <% if restaurant.reservations.length > 0 %>
        <% restaurant.reservations.each do |reservation| %>
          <p>Date: <%= reservation.date %></p>
          <p>Time: <%= reservation.time %></p>
          <p>Name: <%= reservation.user.first_name.capitalize %> <%= reservation.user.last_name.capitalize %> </p>
          <p>Party size: <%= reservation.partysize %></p>
          <%= link_to "Cancel Reservation", restaurant_reservation_url(restaurant, reservation), method: :delete %>
        <% end %>
    <% else %>
      <h3>No Reservations Made</h3>
    <% end %>

  <% end %>

<% end %>
