<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>

  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.user_name %>. <%= link_to "Log out", log_in_path("current"), :method => :delete %>
    <% else %>
      <p><%= link_to "Log In",  log_in_index_url %> | <%= link_to "Sign Up", new_user_url %></p>
    <% end %>

  </p>

<%= yield %>

</body>
</html>
