<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>

  <nav>
    <ul>
      <% if current_diner %>
        <li>Signed in as <%= link_to "#{current_diner.name.titleize}", current_diner %></li>
        <li><%=link_to "Log Out", session_path("current"), :method => :delete %></li>
        <% else %>
        <li><%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_diner_path %></li>
      <%end%>
    </ul>
  </nav>

</header>

<main>
<%= yield %>
</main>

</body>
</html>
