<%= form_for(restaurant) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.number_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email %>
  </div>

  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :time_open %><br />
    <%= f.number_field :time_open %>
  </div>

  <div class="field">
    <%= f.label :time_close %><br />
    <%= f.number_field :time_close %>
  </div>

  <div class="field">
    <%= f.label :cuisine %><br />
    <%= f.text_area :cuisine %>
  </div>

  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_area :url %>
  </div>

  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
