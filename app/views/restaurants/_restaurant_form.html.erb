<%= form_for @restaurant do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br />

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div><br />

  <div class="field">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div><br />

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div><br />

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div><br />

  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div><br />

  <div class="field">
    <%= f.label :cuisine %><br />
    <%= f.text_area :cuisine %>
  </div><br />

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div><br />

  <div class="field">
    <%= f.label :time_open %>
    <%= f.number_field :time_open %>
  </div><br />

  <div class="field">
    <%= f.label :time_close %>
    <%= f.number_field :time_close %>
  </div><br />

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div><br />

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
