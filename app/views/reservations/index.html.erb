<div class="container">
  <h1>Reservations at <%= @restaurant.name %></h1>
  <div class="row">
    <div class="col-md-3 thumbnail">
<% @reservations.each do |reservation| %>
  <p><strong>Customer: </strong><%= reservation.user.first_name %> <%= reservation.user.last_name %></p>
  <p><strong>Date: </strong><%= reservation.date.strftime("%B %d, %Y") %></p>
  <p><strong>Time: </strong><%= reservation.time.strftime("%l:%M %p") %></p>
  <p><strong>Party-Size: </strong><%= reservation.party_size %>
<% end %>
</div>
</div>
</div>
