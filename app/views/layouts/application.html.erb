<!DOCTYPE html>
<html>
<head>
  <title>SeatYoSelfFool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <header> <%= link_to image_tag("http://placekitten.com/60/60"), root_path %>
    <h1>SeatYoSelfFool</h1>
    <p id="userinfo">
      <% if current_user %>
        Signed in as <%= link_to current_user.email, user_path(current_user) %>. <%= link_to "Log out", session_path(:current), method: :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </p>
  </header>

<%= yield %>

</body>
</html>
