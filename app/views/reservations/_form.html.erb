<%= form_for([@restaurant, @reservation]) do |f| %>
  <% if @reservation.errors.any? %>
    <div class="error-block">
      <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
        <% @reservation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :time_slot, 'Select the date and time:'%><br />
    <%= f.datetime_field :time_slot %>
  </div>

  <div class="field">
    <%= f.label :party_size, 'Number of people:'%><br />
    <%= f.number_field :party_size %>
  </div>

  <div class="field">
    <%= f.label :note, 'Leave a note:'%><br />
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn-default' %>
  </div>
<% end %>