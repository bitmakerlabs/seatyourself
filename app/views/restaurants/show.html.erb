
<div class="individual_restaurant">
  <h1><%= @restaurant.name%></h1>
  <%= image_tag @restaurant.main_picture %>
  <%= @restaurant.address %> <br />
  <%= @restaurant.neighbourhood %> <br />
  <%= @restaurant.price_range %>

  <div class="menu">
    <% @restaurant.uploads.each do |upload|%>
    <%= image_tag upload %>
    <% end  %>
  </div>

  <%= link_to "Back to restaurants", restaurants_path %>
  <%= link_to "Edit restaurant", edit_restaurant_path(@restaurant.id) %>
</div>
