<%=form_for @diner do |f| %>
    <% if @diner.errors.any? %>
      <div class="error_msg">
        <h2>Form is Invalid</h2>
        <ul>
          <% @diner.errors.full_message.each do |message| %>
            <li><%=message%></li>
          <%end%>
        </ul>
      </div>
    <%end%>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="submit">
      <%=f.submit "Sign Up"%>
  </div>
<%end%>
