<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!--start of navbar-->
  <div class="wrapper">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="http://localhost:3000">Seats Table</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><a href="#">Hi <%= current_user.user_name %></a></li>
            <li><a href="/log_in/current" data-method="delete">Log out</a></li>
          <% else %>
            <li><a href="http://localhost:3000/users/new">Sign Up</a></li>
            <li><a href="http://localhost:3000/log_in">Log In</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  <!--end of nav bar -->

  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.user_name %>. <%= link_to "Log out", log_in_path("current"), :method => :delete %>
    <% else %>
      <p><%= link_to "Log In",  log_in_index_url %> | <%= link_to "Sign Up", new_user_url %></p>
    <% end %>

  </p>

<%= yield %>

</body>
</html>
