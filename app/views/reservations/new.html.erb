<% if @reso.errors.messages.length > 0  %>
  <div class="errors">
    <% @reso.errors.messages.each do |attribute, errors| %>
      <p><%= attribute.capitalize %> <%= errors[0].capitalize %></p>
    <% end %>
  </div>
<% end %>

<%= form_for [@restaurant, @reso] do |f| %>

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :time %>
<%= f.time_select :time, {minute_step: 30} %>

<%= f.label :partysize %>
<%= f.number_field :partysize %>

<%= f.submit %>

<% end %>
