
<%= form_for([@restaurant, @reservation]) do |f| %>
<p>
  <%= f.label :time %><br>
  <%= f.datetime_select :time %>
</p>
<p>
  <%= f.label :party_size %><br>
  <%= f.number_field :party_size %>
</p>
<p>
  <%= f.label :notes %><br>
  <%= f.text_area :notes %>
</p>
<p>
  <%= f.submit "Save" %>
</p>

<% end %>

<%= link_to "Back to Current Restaurant", restaurant_path(@restaurant) %>
<%= link_to "Back to All Restaurants", root_path %>
