
<div id="wrapper">
  <!--start of sidebar-->
  <div id="sidebar-wrapper">
    <ul class = "sidebar-nav">
      <li class="sidebar-brand"><a href="#title-box"><img class="img-responsive img-circle" src="http://placehold.it/350x350" alt="Chania"></a></li>
      <li><a href="#"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>  Location</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>  Cusine</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-bitcoin" aria-hidden="true"></span>  Price</a></li>
      <li><a href="#"><span></span></a></li>
    </ul>
    <div class="social-btn">
      <a href="#"><i class="fa fa-facebook-square fa-3x" aria-hidden="true"></i></a>
      <a href="#"><i class="fa fa-github-alt fa-3x" aria-hidden="true"></i></a>
      <a href="#"><i class="fa fa-twitter fa-3x" aria-hidden="true"></i></a>
      <a href="#"><i class="fa fa-camera-retro fa-3x" aria-hidden="true"></i></a>
    </div>
  </div>
  <!--end sidebar-->
  <%= link_to "New Restaurant", new_restaurant_path %>


  <%= form_tag restaurants_path, :method => 'get' do %>
    <br>
    <p> Search Restaurants by Name:
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <% @found_restaurants.each do |restaurant| %>
          <div class="restaurant-box">
            <img src="<% restaurant.pictures.first.url %>" alt="" />
            <h2><%= link_to "#{restaurant.name}", restaurant %></h2>
            <p><%= restaurant.location.capitalize %>, <%= restaurant.cuisine.capitalize %> </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
