<h1>Log in</h1>

<% if current_user %>
  <h2>You're already logged in foo!</h2><br>
  <%= link_to "Back", root_path %>
<% else %>
  <%= form_tag sessions_path do  %>
    <div class="field">
      <%= label_tag :email %><br>
      <%= email_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="submit">
      <%= submit_tag "Log in now!!" %>
    </div>
  <% end %>
<% end %>
