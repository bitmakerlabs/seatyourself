<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>


<header>
  <img src="https://www.kcalextra.com/kcal-content/uploads/2017/05/kcal-header.jpg">
  <h1>Welcome To Munch!</h1>
  <div>
    <nav>
      <ul class="header_nav">
        <li><%= link_to 'Home', restaurants_path %></li>
      <% if current_user %>
        <li>Signed in as <%= link_to("#{current_user.email}", user_path(current_user)) %></li>
        <li><%= link_to 'Log out', session_path("current"), :method => :delete  %></li>
        <li><%= link_to 'Create Restaurant', new_restaurant_path %></li>
      <% else %>
        <li><%= link_to 'Log In', new_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_path %></li>
      <% end %>
      </nav>
    </ul>
  </div>
</header>

<body>
  <div class="main">
    <%= yield %>
  </div>
</body>

<footer>
  <ul class="footer_nav">
    <li><%= link_to 'About us' %></li>
    <li><%= link_to 'Contact us' %></li>
