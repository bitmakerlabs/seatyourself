
<%= form_for reservation do |f| %>

  <!-- <%= a_restaurant.id %> -->

  <%= f.hidden_field(:restaurant_id, value: a_restaurant.id) %>

  <h3><%= f.label :time %> <%= f.time_select :time, discard_minute: true, start_hour: 10, end_hour: 20 %></h3>

  <h3><%= f.label :date %> <%= f.date_field :date, min: Date.today %></h3>

  <h3>Tables: <%= f.select :number_of_tables, (1..5) %></h3>

  <h3><%= f.submit %></h3>

<% end %>
