<h1><%= image_tag(@restaurant.logo_url) %><br>
  <%= @restaurant.name %></h1>
<p>
    <%= @restaurant.location %></br>
    <%= link_to "#{@restaurant.name}'s website", @restaurant.site_url %></br>
    <%= @restaurant.description %></br>
</p>

<% if current_user %>
  <%= form_for([@restaurant, @reservation]) do |f| %>
  <p>
    <%= f.label :time %><br>
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :party_size %><br>
    <%= f.number_field :party_size %>
  </p>
  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
  <% end %>
<% end %>


<% if current_user %>
  <p>
    <% @reservations.each do |reservation| %>
      <%= link_to "Edit", edit_restaurant_reservation_path(@restaurant, reservation) %> |
      <%= link_to "Delete", restaurant_reservation_path(@restaurant, reservation), method: :delete, data: {confirm: "You Sure Fool??"}  %>

      <%= reservation.time %></br>
      <%= reservation.party_size %></br>
      <%= reservation.notes %><br /><br />

    <% end %>
  </p>
<% end %>

<%= link_to "Back to All Restaurants", root_path %>
