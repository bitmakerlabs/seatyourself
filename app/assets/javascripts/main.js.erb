var imageID=0;
function changeimage(every_seconds){
    //change the image
    if(!imageID){
        document.getElementById("myimage").src="<%= asset_path '1.jpeg' %>" ;
        imageID++;
    }
    else{if(imageID==1){
        document.getElementById("myimage").src="<%= asset_path '2.jpeg' %>";
        imageID++;
    }else{if(imageID==2){
        document.getElementById("myimage").src="<%= asset_path '3.jpeg' %>";
        imageID=0;
    }}}
    //call same function again for x of seconds
    setTimeout("changeimage("+every_seconds+")",((every_seconds)*1000))
