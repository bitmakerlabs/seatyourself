<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
<p><strong><%= link_to "#{restaurant.name.titleize}", restaurant_path(restaurant.id)%></strong> <br>
<%= "Location: #{restaurant.street.titleize}, #{restaurant.city.titleize}, #{restaurant.postal.upcase}"%>
<br>
<%= "#{restaurant.about}"%>
</p>
<%end%>
