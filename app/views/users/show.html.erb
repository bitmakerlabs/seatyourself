<%= link_to("Edit Profile", edit_users_path)%> | <%= link_to "Make a Reservation", new_users_reservation_path %>


<h2>Upcoming Reservations</h2>



<% reservations = Reservation.where( user_id: @user.id) %>
<ul>
<% reservations.each do |reservation| %>
<p>
	<%= "You have a reservation at #{reservation.restaurant.name} on #{reservation.date_time.strftime("%A, %B %-d at %l:%M %P")} for #{reservation.party_size} people" %>
	<br>
	<%= link_to("Edit", edit_users_reservation_url(reservation.id) )%>
	| <%= link_to("Delete", users_reservation_url(reservation.id), method: :delete, data: {confirm: "Are you sure?"}) %>
</p>
</li>
<%end %>
</ul>

<h3>Restaurants</h3>
<% @restaurants.each do |current_restaurant| %>
	<%= render 'restaurants/single_restaurant', restaurant: current_restaurant %>
<% end %>
<%= link_to("New Restaurant", new_restaurant_path)%>
