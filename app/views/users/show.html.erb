
<div>
  <h2>Profile Page</h2>

</div>
<section>
<h1 class="user_welcome">Welcome <%= @user.first_name %>!</h1>

<div class="user_profile">
  <p class="edit_link"><%= link_to "EDIT", "/users/#{@user.id}/edit" %></p>
  <div class="user_info">
    <p>User: <div class="display"><%= @user.first_name %></div></p>
    <p>User: <div class="display"><%= @user.last_name %></div></p>
    <p>Email: <div class="display"><%= @user.phone_number %></div></p>
    <p>Phone: <div class="display"><%= @user.email %></div></p>
  </div>
</div>

  <div class="active_reservations">
    <h2>Upcoming Reservations</h2>
    <div class="reservations_table">
      <% @user.reservations.each do |reservation| %>
      <div class="display"><%= reservation.restaurant.name %></div>
        <% if reservation.user != nil %>
            <p><%= reservation.party_size %> guests ON <%= reservation.time %><%= reservation.date %></p>
        <% else %>
         <div class="display">No reservations yet!</div>
        <% end %>
      <% end %>
    </div>
  </div>


</section>
