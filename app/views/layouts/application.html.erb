<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class ="diner_status">
  <% if current_diner %>
    Signed in as <%= link_to "#{current_diner.name.titleize}", show_diner_path %>. <%=link_to "Log Out", session_path("current"), :method => :delete %>
  <% else %>
  <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_diner_path %>
  <%end%>
</p>
<%= yield %>

</body>
</html>
