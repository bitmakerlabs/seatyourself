<%=form_for(@restaurant) do |f| %>
    <% if @restaurant.errors.any? %>
      <div class="error_msg">
        <h2>Form is Invalid</h2>
        <ul>
          <% @restaurant.errors.full_message.each do |message| %>
            <li><%=message%></li>
          <%end%>
        </ul>
      </div>
    <%end%>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :op_hours %>
    <%= f.time_field_tag :op_hours %>
  </div>

  <div class="field">
    <%= f.label :about %>
    <%= f.text :about %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>


  <div class="submit">
      <%=f.submit "Sign Up"%>
  </div>
<%end%>
