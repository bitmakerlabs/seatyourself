<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<header>
  <div class="nav">
  <%= link_to 'Home', restaurants_path %>

  <% if current_user %>
  <div class="">
  Signed in as <%= link_to("#{current_user.email}", user_path(current_user)) %> <br>
  <%= link_to 'Log out', session_path("current"), :method => :delete  %> <br>
  <%= link_to 'Create Restaurant', new_restaurant_path %>
  </div>
  <% else %>
  <div class="">
  <%= link_to 'Log In', new_session_path %> | <%= link_to 'Sign Up', new_user_path %>
  </div>
  <% end %>
  </div>

  <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
  <% end %>

</header>
<body>

<%= yield %>

</body>
</html>
