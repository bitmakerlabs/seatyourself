<% if @restaurant.errors.any? %>
  <div id="field_with_errors">
    <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @restaurant  do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :address %>
  <%= f.text_field :address %>
</p>

<p>
  <%= f.label :neighborhood %>
  <%= f.text_field :neighborhood %>
</p>

<p>
  <%= f.label :price_range %>
  <%= f.select :price_range, ['$', '$$', '$$$'] %>
</p>

<p>
  <%= f.label :menu %>
  <%= f.text_field :menu %>
</p>

<p>
  <%= f.label :summary %>
  <%= f.text_area :summary %>
</p>

<p>
  <%= f.label :time_slots %>
  <%= f.datetime_field :time_slots %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
