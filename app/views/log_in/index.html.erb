<h1>Log In</h1>
<%= form_tag log_in_index_path do %>
  <div class="field">
    <%= label_tag :user_name, "User Name: " %><br />
    <%= text_field_tag :user_name, params[:user_name] %>
  </div>
  <div class="field">
    <%= label_tag :password, "Password: " %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
