<h1>All These Choices.... All This Food</h1>

<main>
  <p>
    <ul>
      <% @restaurant.each do |rest| %>
        <li>
          <p>
            Restaurant Name: <br>
            <%= rest.name %> <br>
            Restaurant Link: <br>
            <%= link_to "#{rest.name}", restaurant_path(rest.id) %>
          </p>

        </li>
      <% end %>
    </ul>
  </p>
</main>
