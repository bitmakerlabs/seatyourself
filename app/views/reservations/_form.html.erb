 <%= form_for(reservation, url: new_restaurant_reservation_path(reservation)) do |f| %>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

   <div>
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div>

   <div>
    <%= f.label :party_size %>
    <%= f.number_field :party_size %>
  </div>

   <div>
    <%= f.submit "Save reservation" %>
  </div>
<% end %>
