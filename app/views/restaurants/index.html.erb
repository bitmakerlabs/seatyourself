<div id="myimage" class="top-head">
<!-- THIS PART IS FOR THE TOP IMAGE AND STUFF -->

  <div class="main-header">
        <div class="page-header">
          <h1 id="main-title">RestaurRat <small>seat yourself</small></h1>
        </div>
          <p id="motto">Restaurant Reservations made easy</p>
  </div>
</div>

<div class="border-block">
  <div class="container">
    “All you need is love. But a little chocolate now and then doesn't hurt.”  <em>― Charles M. Schulz</em>
  </div>
</div>

<div class="container search-box ">
  <div class="col-md-6">
  <h4> Find Restaurant near: </h4>
  <%= form_tag restaurants_path, method: :get do %>
  <%= text_field_tag :search_address, params[:search_address], placeholder: "Address + City" %>
  <%= submit_tag "Go!" %>  <p id="fix-align"> <button id="find-nearby">Use Current Location</button> <%= link_to "reset location", restaurants_url %></p>
  <% end %>
</div>
</div>


<div class="page-header container">
  <% if flash[:success] %>
    <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
  <% end %>
  <h1>Restaurants <small>Found <%= @restaurants.length %> locations</small></h1>
  <p> </p>
</div>




  <div class="container main-view-box">
      <div class="row">
        <!--- This the start of the each -->
        <% @restaurants.each do |restaurant| %>
        <div class="thumbnail view-all col-md-6">
          <% if restaurant.image_file_name.nil? %>
            <img src="http://344apz3bh6di1m0sag1etg3fxyz.wpengine.netdna-cdn.com/wp-content/uploads/2010/02/beef-roast-company.gif" class="thumb-img">
            <% else %>
            <%= image_tag restaurant.image, class: "thumb-img" %>
            <% end %>
            <div class="container view-content">
              <h3 class="main-view-title"><%= restaurant.name %></h3>
              <small class="main-view-add"><strong>Address </strong><em><%= restaurant.address %></em> </small> <br/>
              <strong>Cuisine:</strong>  <%=restaurant.cuisine.name %><br/><br/>
              <%= link_to "View More or Make Reservation", restaurant_path(restaurant), class: "btn btn-default" %>
            </div>
        </div>
        <% end %>

        <!-- this is the break of the each -->
      </div>
  </div>
</div>
